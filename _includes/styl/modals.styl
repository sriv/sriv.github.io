  padding-left: 45px;

  img {
    position: absolute;
    left: 0;
    width: 32px;
    height: 32px;
    border: 2px solid $highlight_color;
  }

  span {
    color: #777;
    font-size: 13px;
    padding-left: 3px;
  }
}

.tweet-title:hover {
  border-bottom: 0;
}

.tweet-text {
  color: #777;
  margin:0;
  padding: 3px 0;
  font-size: 13px;
  line-height: 18px;
  margin-left: 45px;
  word-wrap break-word

  a { border-bottom: 0; }
}

.tweet-date {
  margin: 0;
  font-size: 13px;
  line-height: 18px;
  margin-left: 45px;
  color: #999;
}

